digraph G {
  charset="UTF-8";
  graph [truecolor=true,bgcolor=transparent];
  rankdir="<%= @direction -%>";

  <%- @graph.left.each_with_index do |tokens, i| -%>
    <%= "rootL#{i}" -%> [label="",shape=circle];

    <%- tokens.select { |t| t.empty_token_sort != 'P' }.each do |token| -%>
      <%= node token.id, token.relation.to_s.upcase,                 shape: :box -%>

      <%- if token.relation -%>
        <%= edge (token.head ? token.head.id : "rootL#{i}"), token.id, '', weight: 1.0, color: :orange -%>
      <%- end -%>

      <%- token.slashes.each do |(relation, target)| -%>
        <%= edge token.id, target, relation.to_s.upcase, weight: 0.0, color: :blue, style: :dashed %>
      <%- end -%>
    <%- end -%>

    <%- tokens.select { |t| t.empty_token_sort != 'P' }.each do |token| -%>
      <%= edge token.id, "T#{token.id}", nil, weight: 10, arrowhead: :none -%>
    <%- end -%>
  <%- end -%>

  {
    rank="same";

    <%- @graph.left.each do |tokens| -%>
      <%- tokens.select { |t| t.empty_token_sort != 'P' }.each do |token| -%>
        <%= node "T#{token.id}", token.form, shape: :none -%>
      <%- end -%>

      <%= tokens.select { |t| t.empty_token_sort != 'P' }.map { |token| "T#{token.id}" }.join('->') -%> [style="invis"];
    <%- end -%>
  }

  <%- @graph.right.each_with_index do |tokens, i| -%>
    <%= "rootR#{i}" -%> [label="",shape=circle];

    <%- tokens.select { |t| t.empty_token_sort != 'P' }.each do |token| -%>
      <%= node token.id, token.relation.to_s.upcase,                 shape: :box -%>

      <%- if token.relation -%>
        <%= edge token.id, (token.head ? token.head.id : "rootR#{i}"), '', weight: 1.0, color: :orange -%>
      <%- end -%>

      <%- token.slashes.each do |(relation, target)| -%>
        <%= edge token.id, target, relation.to_s.upcase, weight: 0.0, color: :blue, style: :dashed %>
      <%- end -%>
    <%- end -%>

    <%- tokens.select { |t| t.empty_token_sort != 'P' }.each do |token| -%>
      <%= edge "T#{token.id}", token.id, nil, weight: 10, arrowhead: :none -%>
    <%- end -%>
  <%- end -%>

  {
    rank="same";

    <%- @graph.right.each do |tokens| -%>
      <%- tokens.select { |t| t.empty_token_sort != 'P' }.each do |token| -%>
        <%= node "T#{token.id}", token.form, shape: :none -%>
      <%- end -%>

      <%= tokens.select { |t| t.empty_token_sort != 'P' }.map { |token| "T#{token.id}" }.join('->') -%> [style="invis"];
    <%- end -%>
  }

  <%- @graph.alignments.each do |x, y| -%>
    <%= "T#{x}" -%> -> <%= "T#{y}" -%> [style=dashed,color=blue,dir=none];
  <%- end -%>
}
